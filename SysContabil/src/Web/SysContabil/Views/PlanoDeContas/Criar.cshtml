@model SysContabil.Models.PlanoDeContasViewModel

@{
    ViewData["Title"] = "Criar";
}

<h2>Plano de Contas</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroDaConta" class="control-label"></label>
                <input asp-for="NumeroDaConta" class="form-control" />
                <span asp-validation-for="NumeroDaConta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeDaConta" class="control-label"></label>
                <input asp-for="NomeDaConta" class="form-control" />
                <span asp-validation-for="NomeDaConta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
